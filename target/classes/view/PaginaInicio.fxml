<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@inicioCSS.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.adrianbreyner.controller.PaginaInicioController">
    <children>
        <VBox alignment="CENTER" spacing="40.0" styleClass="creative-main-background" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            
            <Label styleClass="creative-app-title" text="KinSmart">
                <font>
                    <Font name="System Bold" size="64.0" />
                </font>
            </Label>

            <Label styleClass="creative-welcome-slogan" text="Gestiona tus recursos de forma inteligente y eficiente.">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            
            <VBox alignment="CENTER" spacing="25.0" styleClass="creative-options-card">
                <padding>
                    <Insets bottom="40.0" left="60.0" right="60.0" top="40.0" />
                </padding>
                
                <Label styleClass="card-greeting-label" text="¿Qué quieres ver hoy?">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER" spacing="25.0">
                    <Button onAction="#Tienda" prefHeight="70.0" prefWidth="280.0" styleClass="creative-action-button" text="Productos">
                        <graphic>
                            <Label styleClass="button-icon" text="📦" translateX="8.0" translateY="-3.0" />
                        </graphic>
                    </Button>
                    <Button onAction="#Carrito" prefHeight="70.0" prefWidth="280.0" styleClass="creative-action-button" text="Carrito">
                        <graphic>
                            <Label layoutX="100.0" prefHeight="20.0" prefWidth="40.0" styleClass="button-icon-2" text="🛍" translateX="10.0" translateY="-5.0" />
                        </graphic>
                    </Button>
                </HBox>
            <HBox alignment="CENTER" spacing="25.0" />
                <Button onAction="#CerrarSesion" prefHeight="50.0" prefWidth="200.0" styleClass="creative-logout-button" text="Cerrar Sesión" />
            </VBox>

            <VBox VBox.vgrow="ALWAYS" />
            <Label styleClass="creative-footer-branding" text="Impulsado por Kinal 🚀">
                <padding>
                    <Insets bottom="25.0" />
                </padding>
            </Label>
            
        </VBox>
    </children>
</AnchorPane>
